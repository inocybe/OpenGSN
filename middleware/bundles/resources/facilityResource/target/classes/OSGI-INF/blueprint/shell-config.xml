<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

	<!-- Provide commands to the Karaf shell -->
	<command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
		<command name="gsn-facility/setOPHours">
            <action class="com.greenstarnetwork.resources.facilityResource.shell.SetOPHoursShellCommand"/>
        </command>
		<command name="gsn-facility/setThresholds">
            <action class="com.greenstarnetwork.resources.facilityResource.shell.SetThresHoldsShellCommand"/>
        </command>
		<command name="gsn-facility/refresh">
            <action class="com.greenstarnetwork.resources.facilityResource.shell.RefreshShellCommand"/>
        </command>
		<command name="gsn-facility/runPoller">
            <action class="com.greenstarnetwork.resources.facilityResource.shell.RunPollerShellCommand"/>
        </command>
		<command name="gsn-facility/calculateOPSpecs">
            <action class="com.greenstarnetwork.resources.facilityResource.shell.CalculateOPSpecsShellCommand"/>
        </command>
		<command name="gsn-facility/checkPower">
            <action class="com.greenstarnetwork.resources.facilityResource.shell.CheckPowerShellCommand"/>
        </command>
	</command-bundle>

</blueprint>



