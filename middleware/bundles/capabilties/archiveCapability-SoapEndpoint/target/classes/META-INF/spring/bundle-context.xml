<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
	xmlns:osgi="http://www.springframework.org/schema/osgi"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">
	<import resource="classpath:META-INF/cxf/cxf.xml" />
    <import resource="classpath:META-INF/cxf/cxf-extension-soap.xml" />
	<import resource="classpath:META-INF/cxf/cxf-extension-http.xml" />  
	<import resource="classpath:META-INF/cxf/osgi/cxf-extension-osgi.xml" />
	 
	<!-- Get the reference to the OSGi Service -->
 	<osgi:reference id="archiveClient"
		interface="com.greenstarnetwork.capabilities.archive.api.IArchiveClient" />
	
    <!-- Instantiate the Service Class while injecting the archive in the constructor -->
	 <bean name="archiveCapabilityService" class="com.greenstarnetwork.capabilities.archiveCapability.soapendpoint.ArchiveCapabilitySOAPEndpoint">
		<constructor-arg>
			<ref bean="archiveClient" />
		</constructor-arg>
	</bean>
	
	<!-- Define the JAX-WS Endpoint from the previous bean -->
	 <jaxws:endpoint id="archiveCapabilitySOAPEndpoint"
		implementorClass="com.greenstarnetwork.capabilities.archiveCapability.soapendpoint.ArchiveCapabilitySOAPEndpoint"
		implementor="#archiveCapabilityService" address="/ArchiveCapabilitySOAPEndpoint" />
 
</beans>
