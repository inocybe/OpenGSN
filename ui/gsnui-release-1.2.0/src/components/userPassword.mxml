<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" borderStyle="solid">
	
	<mx:Script>
		<![CDATA[
			import mx.controls.Alert;
		]]>
	</mx:Script>
	
	<mx:Form>
		<mx:FormHeading label="Change your password"/>
		<mx:FormItem label="Current password" labelStyleName="formLabel">
			<mx:TextInput displayAsPassword="true"/>
		</mx:FormItem>
		<mx:FormItem label="New Password" labelStyleName="formLabel">
			<mx:HBox>
				<mx:TextInput displayAsPassword="true"/>
				<mx:Label text="(Minimum 6 characters)" />
			</mx:HBox>
		</mx:FormItem>
		<mx:FormItem label="Confirm new password" labelStyleName="formLabel">
			<mx:TextInput displayAsPassword="true"/>
		</mx:FormItem>
		<mx:FormItem>
			<mx:HBox width="100%">
				<mx:Button label="Save" icon="@Embed(source='Assets/images/check.png')" click="{Alert.show('This feature has not been implemented yet.');}"/>
				<mx:Button label="Cancel" icon="@Embed(source='Assets/images/delete2.png')" click="{Alert.show('This feature has not been implemented yet.');}"/>
			</mx:HBox>
		</mx:FormItem>
	</mx:Form>

	
</mx:VBox>
