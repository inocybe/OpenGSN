<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" borderStyle="solid">
	
	<mx:Script>
		<![CDATA[
			import mx.controls.Alert;
			
			[Bindable]
			public var role:String;
			[Bindable]
			public var firstName:String;
			[Bindable]
			public var lastName:String;
			[Bindable]
			public var email:String;
			[Bindable]
			public var homePhone:String;
			[Bindable]
			public var mobilePhone:String;
			
		]]>
	</mx:Script>
	
	<mx:Form>
		<mx:FormHeading label="Modify your account information"/>
		<mx:FormItem label="Firstname" labelStyleName="formLabel">
			<mx:TextInput text="{firstName}"/>
		</mx:FormItem>
		<mx:FormItem label="Lastname" labelStyleName="formLabel">
			<mx:TextInput text="{lastName}"/>
		</mx:FormItem>
		<mx:FormItem label="Role" labelStyleName="formLabel">
			<mx:TextInput text="{role}" editable="false"/>
		</mx:FormItem>
		<mx:FormItem label="Email" labelStyleName="formLabel">
			<mx:TextInput text="{email}"/>
		</mx:FormItem>
		<mx:FormItem label="Phone" labelStyleName="formLabel">
			<mx:TextInput text="{homePhone}"/>
		</mx:FormItem>
		<mx:FormItem label="Mobile" labelStyleName="formLabel">
			<mx:TextInput text="{mobilePhone}"/>
		</mx:FormItem>
		<mx:FormItem>
			<mx:HBox width="100%">
				<mx:Button label="Save" icon="@Embed(source='Assets/images/check.png')" click="{Alert.show('This feature has not been implemented yet.');}"/>
				<mx:Button label="Cancel" icon="@Embed(source='Assets/images/delete2.png')" click="{Alert.show('This feature has not been implemented yet.');}"/>
			</mx:HBox>
		</mx:FormItem>
	</mx:Form>
	
</mx:VBox>
